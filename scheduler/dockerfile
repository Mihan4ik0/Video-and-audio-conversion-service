# Используйте официальный образ Python в качестве базового образа
FROM python:3.10.7

# Установите рабочую директорию внутри контейнера
WORKDIR /app

# Скопируйте файлы проекта в рабочую директорию
COPY . .

# Установите зависимости проекта
RUN pip install --no-cache-dir -r requirements.txt

# Откройте порт, на котором будет работать приложение
EXPOSE 8000

# Запустите приложение
CMD ["uvicorn", "scheduler:app", "--host", "0.0.0.0", "--port", "8000"]